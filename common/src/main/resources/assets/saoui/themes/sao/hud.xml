<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bl:hud xmlns:bl="http://www.bluexin.be/com/saomc/saoui/hud-schema">
    <version>1.0</version>
    <parts>
        <entry>
            <key>HEALTH_BOX</key>
            <value name="health box">
                <children>
                    <fragmentReference id="saoui.sao:health_box"/>
                    <fragmentReference id="saoui.sao:label">
                        <variables>
                            <variable key="text" type="STRING" cache="STATIC">"Hello World !"</variable>
                        </variables>
                        <x cache="STATIC">80</x>
                        <y cache="STATIC">100</y>
                    </fragmentReference>
                    <fragmentReference id="saoui.sao:label">
                        <variables>
                            <variable key="text" type="STRING">"How are you " + username + " ?"</variable>
                        </variables>
                        <x cache="STATIC">80</x>
                        <y cache="STATIC">120</y>
                    </fragmentReference>
                    <fragmentReference id="saoui.sao:label">
                        <variables>
                            <variable key="text" type="STRING" cache="STATIC">"Hello World !"</variable>
                            <variable key="centered" type="BOOLEAN" cache="STATIC">true</variable>
                        </variables>
                        <x cache="STATIC">80</x>
                        <y cache="STATIC">200</y>
                    </fragmentReference>
                    <fragmentReference id="saoui.sao:label">
                        <variables>
                            <variable key="text" type="STRING">"How are you " + username + " ?"</variable>
                            <variable key="centered" type="BOOLEAN" cache="STATIC">true</variable>
                        </variables>
                        <x cache="STATIC">80</x>
                        <y cache="STATIC">220</y>
                    </fragmentReference>
                </children>
            </value>
        </entry>
        <entry>
            <key>HOTBAR</key>
            <value name="hotbar">
                <children>
                    <fragmentReference id="saoui.sao:hotbar"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>EXPERIENCE</key>
            <value name="exp">
                <!-- Could be moved to be part of the health fragment -->
                <enabled>!booleanSetting("hud:remove_hpxp")</enabled>
                <x>usernamewidth + 144 + strWidth(absorption > 0? format(isEnabled(ALT_ABSORB_POS)?
                    "formatHealthAbsorbAlt": "formatHealthAbsorb", ceil(hp), ceil(maxHp),
                    ceil(absorption)): format("formatHealth", ceil(hp), ceil(maxHp)))
                </x>
                <y cache="STATIC">14</y>
                <children>
                    <fragmentReference id="saoui.sao:experience"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>JUMP_BAR</key>
            <value name="vanilla horse jump bar">
                <x cache="SIZE_CHANGE">scaledwidth / 2 - 91</x>
                <y cache="SIZE_CHANGE">scaledheight - 29</y>
                <children>
                    <!-- This is the vanilla jump bar, we should move to something sao -->
                    <fragmentReference id="saoui.sao:jump_bar"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>CROSS_HAIR</key>
            <value name="crosshair">
                <children>
                    <fragmentReference id="saoui.sao:crosshair"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>PARTY</key>
            <value name="party">
                <children>
                    <fragmentReference id="saoui.sao:party"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>EFFECTS</key>
            <value name="effects">
                <children>
                    <fragmentReference id="saoui.sao:effects"/>
                </children>
            </value>
        </entry>
        <entry>
            <key>ENTITY_HEALTH_HUD</key>
            <value name="entity health hud">
                <children>
                    <fragmentReference id="saoui.sao:entity_health"/>
                </children>
            </value>
        </entry>
    </parts>
</bl:hud>
