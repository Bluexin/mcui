<bl:fragment xmlns:bl="http://www.bluexin.be/com/saomc/saoui/fragment-schema"
             name="crosshair fragment">
    <texture>saoui:textures/hex2/gui_hex.png</texture>
    <children>
        <glRectangle name="hex">
            <enabled>false</enabled>
            <w cache="STATIC">10</w>
            <h cache="STATIC">10</h>
            <x cache="SIZE_CHANGE">-5</x>
            <y cache="SIZE_CHANGE">-5</y>
            <texture>saoui:textures/hex2/gui_hex.png</texture>
            <srcX cache="STATIC">32.0</srcX>
            <srcW cache="STATIC">16.0</srcW>
            <srcH cache="STATIC">16.0</srcH>
        </glRectangle>
        <glRectangle name="dot">
            <enabled>true</enabled>
            <!--<enabled>!isEnabled(CROSS_HAIR)</enabled>-->
            <h cache="STATIC">1.0</h>
            <w cache="STATIC">1.0</w>
        </glRectangle>
        <elementGroup>
            <enabled>false</enabled>
            <!--<enabled>isEnabled(CROSS_HAIR)</enabled>-->
            <children>
                <glRectangle name="v">
                    <h cache="STATIC">10</h>
                    <w cache="STATIC">2</w>
                    <x cache="SIZE_CHANGE">-1</x>
                    <y cache="SIZE_CHANGE">-5</y>
                </glRectangle>
                <glRectangle name="h">
                    <h cache="STATIC">2</h>
                    <w cache="STATIC">10</w>
                    <x cache="SIZE_CHANGE">-5</x>
                    <y cache="SIZE_CHANGE">-1</y>
                </glRectangle>
            </children>
        </elementGroup>
    </children>
</bl:fragment>